
@{
    ViewBag.Title = "AssignRoles";
}

<h2>AssignRoles</h2>

<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("AssignRoles", "Admin", FormMethod.Post))
        {
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label">User Name</label>
                    <input type="text" name="username" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label">Role Type</label>
                    @Html.DropDownList("UserRole", (SelectList)ViewBag.Name, " ")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

